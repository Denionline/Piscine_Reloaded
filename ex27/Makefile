# **************************************************************************** #
#                                     Configs                                  #
# **************************************************************************** #

MAKE		= make
SHELL		= bash

# **************************************************************************** #
#                                     Names                                    #
# **************************************************************************** #

NAME		= ft_display_file

# **************************************************************************** #
#                                     Paths                                    #
# **************************************************************************** #

SRC_PATH	= .
FILE		= main.c
SRC		= $(addprefix $(SRC_PATH)/, $(FILE))

# **************************************************************************** #
#                                     Compiler                                 #
# **************************************************************************** #

CC		= cc
CFLAGS		= -Wall -Wextra -Werror

# **************************************************************************** #
#                                     Comands                                  #
# **************************************************************************** #

RM		= rm -rf
AR		= ar rcs

# **************************************************************************** #
#                                     Rules                                    #
# **************************************************************************** #

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)
	
clean:

fclean:
	$(RM) $(NAME)

re: fclean all
